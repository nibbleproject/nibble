{
  "name": "minicomi",
  "description": "A webcomics platform that tries its best to be easy to get going with.",
  "website": "https://github.com/grampajoe/minicomi",
  "repository": "https://github.com/grampajoe/minicomi",
  "success_url": "/",
  "addons": [
    "heroku-postgresql"
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "minicomi.settings.production",
    "SUPERUSER_NAME": {
        "description": "Username for the initial superuser."
    },
    "SUPERUSER_EMAIL": {
        "description": "Email for the initial superuser."
    },
    "SUPERUSER_PASSWORD": {
        "description": "Password for the initial superuser."
    }
  },
  "scripts": {
    "postdeploy": "python manage.py migrate && python manage.py minicomi_setup"
  }
}
